<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CardView">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Card View"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginBottom="50dp"/>
        
        <RelativeLayout
            android:layout_marginTop="100dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_icon1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/matcha"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_toRightOf="@id/iv_icon1"
                android:layout_alignParentTop="true"
                android:text="Matcha GreenTea Uyea"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_deskripsi"
                android:text="Campuran boba yang khas nikmat duniawi"
                android:layout_toRightOf="@id/iv_icon1"
                android:layout_below="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_next78"
            android:layout_width="328dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="63dp"
            android:layout_marginTop="250dp"
            android:text="Next" />

    </androidx.cardview.widget.CardView>

</ScrollView>