        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/but1"
            android:layout_marginRight="5pt"
            android:layout_width="40pt"
            android:layout_height="40pt" />

        <Button
            android:id="@+id/but2"
            android:layout_width="40pt"
            android:layout_marginRight="5pt"
            android:layout_height="40pt" />

        <Button
            android:id="@+id/but3"
            android:layout_width="40pt"
            android:layout_marginRight="5pt"
            android:layout_height="40pt" />
    </TableRow>

    <TableRow
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/but4"
            android:layout_marginRight="5pt"
            android:layout_marginTop="2pt"
            android:layout_width="40pt"
            android:layout_height="40pt" />

        <Button
            android:id="@+id/but5"
            android:layout_marginRight="5pt"
            android:layout_marginTop="2pt"
            android:layout_width="40pt"
            android:layout_height="40pt" />

        <Button
            android:id="@+id/but6"
            android:layout_marginTop="2pt"
